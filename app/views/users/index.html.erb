<h2>Listing users</h2>

<%= semantic_form_for @search do |form| %>
<p>
  <%= form.label :name_like, 'Name' %>
  <%= form.text_field :name_like %>
  <%= form.submit "Search" %>
</p>
<% end %>

<%= will_paginate @users %>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Net id</th>
    <th>Email</th>
    <th>Mobile phone</th>
    <th>Work phone</th>
    <th>Home phone</th>
    <th>Work address</th>
    <th>Date of birth</th>
    <th>Statuses</th>
  </tr>
  </thead>
  <tbody>
  <%= render :partial => 'user', :collection => @users %>
  </tbody>
</table>

<%= will_paginate @users %>

<hr />

<p>
<% if permitted_to? :create, :users %>
<%= link_to 'New user', new_user_path %>
<% end %>
</p>

