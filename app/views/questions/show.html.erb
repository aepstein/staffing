<div id="question-<%= @question.id %>">
<p>
  <b>Name:</b> <%=h @question.name %>
</p>

<p>
  <b>Disposition:</b> <%= Question::DISPOSITIONS.key( @question.disposition ) %>
</p>

<p>
  <b>Content:</b>
</p>

<%=markdown @question.content %>

<p>
  <b>Global?</b> <%= @question.global? ? 'Yes' : 'No' %>
</p>

<h3>Quizzes</h3>

<% if @question.quizzes.any? -%>
<ul id="quizzes">
<% @question.quizzes.each do |quiz| -%>
<li><%= link_to h(quiz), quiz %></li>
<% end -%>
</ul>
<% else %>
<p>No quizzes.</p>
<% end -%>
</div> <!-- #question-<%= @question.id %> -->

<p>
<% if permitted_to? :edit, @question -%>
<%= link_to 'Edit', edit_question_path(@question) %> |
<% end -%>
<%= link_to 'Back', questions_path %>
</p>

