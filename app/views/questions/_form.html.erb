  <%= render "shared/error_messages", target: form.object %>
  <%= form.inputs do %>
  <%= form.input :name %>
  <%= form.input :disposition, as: :select, collection: Question::DISPOSITIONS,
    hint: 'How should the question be presented to the user?' %>
  <%= form.input :content,
    hint: 'What is the text of the question?' %>
  <%= form.input :global, as: :radio, label: 'Global?',
    hint: "Should the answer default to what has been given to the same question in other requests?" %>
  <% end %>
  <%= form.input :quizzes, as: :check_boxes,
    hint: 'In which quizzes should this question appear?' %>
  <%= form.actions %>

