<%= form.error_messages %>
<% form.inputs do %>
<%= form.input :starts_at, :hint => 'After when should the memberships should start?', :as => :ft_calendar_date_select %>
<%= form.input :ends_at, :hint => 'After when should the memberships end?', :as => :ft_calendar_date_select %>
<%= form.input :deadline, :hint => 'Before when should recipients create or update their requests?', :as => :ft_calendar_date_select %>
<%= form.input :authority, :hint => 'Choose if you want to limit to positions associated with a particular authority.' %>
<%= form.input :message, :as => :text, :hint => 'Provide a custom message to include in the notice.' %>
<% end %>
<%= form.buttons %>

