<%= content_tag :li do %>
  <% if meeting_item.motion -%>
  <%= link_to meeting_item.motion %>
  <% else -%>
  <%= meeting_item.name %>
  <% end -%>
  (<%= pluralize meeting_item.duration, 'minute' %>)
  <% if meeting_item.motion %>
  <%= render partial: 'attachments/attachments', object: meeting_item.motion.attachments %>
  <% else %>
  <%= render partial: 'attachments/attachments', object: meeting_item.attachments %>
  <% end %>
<% end %>

