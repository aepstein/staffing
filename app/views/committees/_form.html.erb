  <%= render "shared/error_messages", target: form.object %>
  <%= form.inputs do %>
  <%= form.input :name %>
  <%= form.input :contact_name,
    hint: 'What is the name that should appear in from for messages regarding this committee?' %>
  <%= form.input :contact_email,
    hint: 'What is the email that should appear in from for messages regarding this committee?' %>
  <%= form.input :active, as: :radio, label: 'Active?',
    hint: 'Is committee active for staffing and motion purposes?' %>
  <%= form.input :schedule, hint: 'On what schedule are sessions of the committee organized?' %>
  <%= form.input :meeting_template, hint: 'What template should be used to create meeting agendas?' %>
  <%= form.input :brand %>
  <%= form.input :publish_email, hint: 'Where is the default address to publish meeting notices?' %>
  <%= form.input :join_message %>
  <%= form.input :leave_message %>
  <%= form.input :reject_message %>
  <% end %>

  <%= form.inputs for: :enrollments, name: 'enrollment' do |subform| %>
    <%= render partial: 'enrollments/enrollment_fields', locals: { f: subform,
      committee: form.object } %>
  <% end %>

  <div class='links'>
    <p>
      <%= link_to_add_association 'add enrollment', form, :enrollments,
        partial: 'enrollments/enrollment_fields',
        render_options: { locals: { committee: form.object } } %>
    </p>
  </div>

  <%= form.actions %>

