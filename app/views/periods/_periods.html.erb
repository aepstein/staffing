<% schedule = false unless defined? schedule %>
<% if periods.any? %>
<table id="periods">
  <thead>
  <tr>
    <% unless schedule %>
    <th>Schedule</th>
    <% end %>
    <th>Starts at</th>
    <th>Ends at</th>
  </tr>
  </thead>
  <tbody>
  <%= render partial: 'periods/period', collection: periods, locals: {
    schedule: schedule } %>
  </tbody>
</table>
<% else %>
<p>No periods.</p>
<% end %>

