<%=content_tag :h1, "Login" %>

<% if Staffing::Application.sso_providers.any? %>
  <%=content_tag :p do %>
  Log in using your single sign on identity from a supported provider:
  <% end %>

  <%=render partial: 'user_sessions/sso_providers',
    object: Staffing::Application.sso_providers %>
  
  <%=content_tag :p do %>
  Alternatively, if you have a username and password unique to this service, you
  may use that local credential here:
  <% end %>
<% end %>

<%= form_tag user_session_path, class: "form-inline" do %>
  <%=content_tag :div, class: 'form-group' do %>
    <%=label_tag :net_id, 'Net Id', class: "sr-only" %>
    <%=text_field_tag :net_id, params[:net_id], class: 'form-control',
      placeholder: "Enter Username" %>
  <% end %>

  <%=content_tag :div, class: 'form-group' do %>
    <%=label_tag :password, 'Password', class: "sr-only" %>
    <%=password_field_tag :password, "", class: 'form-control',
      placeholder: "Enter Password" %>
  <% end %>

  <%=button_tag "Log in", type: 'submit', class: 'btn btn-default' %>
<% end %>

