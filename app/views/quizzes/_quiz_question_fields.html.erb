<%= content_tag :div, class: 'nested-fields' do %>
  <%= f.inputs name: ( f.object.persisted? ? f.object.question.name : 'New Question' ) do %>
    <% if f.object.new_record? %>
      <%= f.input :question, collection: Question.all %>
    <% end %>
    <%= f.input :position, as: :hidden %>
    <%= link_to_remove_association 'Remove Question', f %>
  <% end %>
<% end %>

