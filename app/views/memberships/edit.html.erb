<h2>Editing membership for <%=h @membership.position %></h2>

<%= semantic_form_for(@membership) do |f| %>
  <%= render partial: 'form', object: f %>
<% end %>

<div id="renewal_candidates">
<h3>Renewal candidates</h3>

<%= render partial: 'candidates', object: User.renewable_to( @membership ) %>
</div>

<div id="new_candidates">
<h3>Other applicants</h3>

<%= render partial: 'candidates', object: User.interested_in( @membership ) %>
</div>

<p>
<%= link_to 'Show', @membership %> |
<%= link_to 'Back', position_memberships_path(@membership.position) %>
</p>

