<h1>New membership</h1>

<% form_for(@membership) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :term %><br />
    <%= f.text_field :term %>
  </p>
  <p>
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </p>
  <p>
    <%= f.label :request %><br />
    <%= f.text_field :request %>
  </p>
  <p>
    <%= f.label :starts_at %><br />
    <%= f.date_select :starts_at %>
  </p>
  <p>
    <%= f.label :ends_at %><br />
    <%= f.date_select :ends_at %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', memberships_path %>