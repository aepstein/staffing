<h1>Listing memberships</h1>

<table>
  <tr>
    <th>User</th>
    <th>period</th>
    <th>Position</th>
    <th>Request</th>
    <th>Starts at</th>
    <th>Ends at</th>
  </tr>

<% @memberships.each do |membership| %>
  <tr>
    <td><%=h membership.user %></td>
    <td><%=h membership.period %></td>
    <td><%=h membership.position %></td>
    <td><%=h membership.request %></td>
    <td><%=h membership.starts_at %></td>
    <td><%=h membership.ends_at %></td>
    <td><%= link_to 'Show', membership %></td>
    <td><%= link_to 'Edit', edit_membership_path(membership) %></td>
    <td><%= link_to 'Destroy', membership, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

