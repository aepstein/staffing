<% user ||= false %>
<table>
  <thead>
  <tr>
    <% unless user %>
    <th>User</th>
    <% end %>
    <th>Period</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <% if defined?(committee) %>
    <th>Title</th>
    <th>Votes</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
<%= render :partial => "memberships/membership", :collection => memberships,
  :locals => { :committee => defined?(committee) ? committee : false, :user => user } %>
  </tbody>
</table>

