<% user ||= false; requestable ||= false %>
  <% table_row_tag do %>
    <% unless user %>
    <td><%=h request.user.name :last_first %></td>
    <% end %>
    <% unless requestable %>
    <td><%=h request.requestable %></td>
    <% end %>
    <td><%=h request.state %></td>
    <td><%= request.position %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, :confirm => 'Are you sure?', :method => :delete %></td>
  <% end %>

