  <%= form.error_messages %>
  <% form.inputs do %>
    <%= form.input :starts_at, :as => :ft_calendar_date_select, :label => 'Desired Start Date',
      :hint => 'When is the earliest date you are interested in serving?' %>
    <%= form.input :ends_at, :as => :ft_calendar_date_select, :label => 'Desired End Date',
      :hint => 'When is the latest date you are interested in serving?' %>
    <%= form.input :new_position, :as => :select, :collection => form.object.new_position_options, :label => 'Move to',
      :hint => 'Select the position among your unexpired requests that reflects '+
      'your level of preference for this committee or position.' %>
    <% form.object.answers.each do |answer| %>
      <% form.semantic_fields_for :answers, answer do |subform| %>
        <%= subform.input( :question_id, :as => :hidden ) if subform.object.new_record? %>
        <%= subform.input :content, :as => :text, :label => subform.object.question.name %>
      <% end %>
    <% end %>
  <% end %>
  <%= form.buttons %>

