<h2>Listing requests <%= @title %></h2>

<%= will_paginate @requests %>

<%= render :partial => "requests", :object => @requests,
  :locals => { :requestable => @requestable, :user => (@requestable || @authority ? false : @user) } %>

<%= will_paginate @requests %>

<hr />

<% if @requestable %>
<p>
<%= link_to 'New request', new_polymorphic_path( [@requestable, :request] ) %>
</p>
<% end %>
<% if @authority %>
<p><%= link_to @authority.to_s, @authority %></p>
<% end %>

