<p>
  <b>Position:</b> <%=h @request.position %>
</p>

<p>
  <b>User:</b> <%=h @request.user %>
</p>

<p>
  <b>State:</b> <%=h @request.state %>
</p>

<p>
  <b>Periods:</b>
</p>

<%= render :partial => 'periods/periods', :object => @request.periods,
  :locals => { :read_only => true } %>

<p>
  <b>Answers:</b>
</p>

<% @request.answers(:include => [:question]).each do |answer| %>
<%=markdown answer.question.content %>
<%=markdown answer.content %>
<% end %>

<p>
<%= link_to 'Edit', edit_request_path(@request) %> |
<%= link_to 'Back', position_requests_path(@request.position) %>
</p>

