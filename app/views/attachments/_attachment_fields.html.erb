<%= content_tag :div, class: 'nested-fields' do %>
  <%= f.input :document, as: :file, label: 'Attachment document',
    hint: 'Specify the file you wish to attach.' %>
  <%= f.input :document_cache, as: :hidden %>
  <%= f.input :description, label: 'Attachment description',
    hint: 'Briefly and uniquely describe the contents of the attachment.' %>
  <%= link_to_remove_association( 'Remove Attachment', f ) %>
<% end %>

