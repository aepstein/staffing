<% @membership.position.enrollments.each do |enrollment| -%>
<%= enrollment.title %> of <%= enrollment.committee %> with <%= pluralize enrollment.votes, 'vote' %>
<% if enrollment.committee.join_message -%>
<%= enrollment.committee.join_message %>
<% end -%>

<% end -%>
<% end -%>

