<% answer = membership_request.answers.for_question( question ) %>
<%= content_tag :li do %>
  <% if answer.blank? %>
    <%=markdown question.content %>
    <%=content_tag :p, "No answer." %>
  <% elsif question.disposition == 'boolean' %>
    <%=markdown( question.content + " #{answer.content == 'true' ? 'Yes' : 'No'}" ) %>
  <% else %>
    <%=markdown question.content %>
    <%=markdown answer.content %>
  <% end %>
<% end %>

