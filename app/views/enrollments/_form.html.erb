  <%= render "shared/error_messages", :target => form.object %>
  <%= form.inputs do %>
  <%= form.input :position_name, :as => :autocomplete, :label => 'Position',
    :url => positions_path( :format => :json ) %>
  <%= form.input :title %>
  <%= form.input :votes %>
  <%= form.input :requestable, :as => :radio,
    :hint => 'Can this committee and position be accessed through the application process?' %>
  <%= form.input :membership_notices, :as => :radio,
    :hint => 'Should enrolled user be copied on notices regarding membership changes?' %>
  <%= form.input :manager, as: :radio,
    hint: 'Should enrolled user be copied on notices regarding motions?' %>
  <% end %>
  <%= form.actions %>

