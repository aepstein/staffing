<p>
  <b>Committee:</b> <%= @motion.committee %>
</p>

<p>
  <b>Period:</b> <%= @motion.period %>
</p>

<p>
  <b>Position:</b> <%= @motion.position %>
</p>

<p>
  <b>Name:</b> <%= @motion.name %>
</p>

<p>
  <b>Description:</b>
</p>

<%=markdown @motion.description %>

<p>
  <b>Content:</b>
</p>

<%=markdown @motion.content %>

<p><b>Sponsors:</b> <%= @motion.users.map(&:name).join(', ') %> </p>

<p>
<% if permitted_to? :edit, @motion -%>
<%= link_to 'Edit', edit_motion_path(@motion) %> |
<% end -%>
<%= nested_index @motion, :users, %w( allowed ) %> |
<%= nested_index @motion, :meetings, %w( past current future ) %> |
<%= link_to "Back to #{@motion.committee}", committee_motions_path(@motion.committee) %>
</p>

