<h2><%=h params[:action].titleize %> motions for <%=h @committee ? @committee : "" %><%=h( @user ? @user : "" ) %></h2>

<%= render :partial => "motions", :object => @motions,
  :locals => { :committee => @committee ? @committee : false, :position => @user ? true : false } %>

<hr />

<p>
<% if @committee && permitted_to?( :create, @committee.motions.build( :period => @committee.periods.active ) ) %>
<%= link_to 'New motion', new_committee_motion_path( @committee ) %>
<% end %>
<% if @user %>
<%= link_to @user.to_s, user_path( @user ) %>
<% end %>
</p>

