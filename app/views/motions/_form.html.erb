  <%= form.error_messages %>
  <% form.inputs do %>
    <%= form.input :name, :hint => 'Name of the motion' %>
    <%= form.input :description, :hint => 'Briefly describe purpose and effect of motion' %>
    <% if permitted_to? :manage, form.object %>
      <%= form.input :user, 'Original sponsor of resolution' %>
      <%= form.input :period, :collection => form.object.periods, :hint => 'For what period is the motion sponsored' %>
    <% end %>
  <% end %>
  <%= form.buttons %>

